<section>
  <div>
    <div>
      <img src="<%= @user.photo %>" alt="User Avatar">
    </div>

    <div>
      <div>
        <h2><%= @user.name %></h2>
        <p>Number of posts:
          <%= @user.posts_counter || 0 %></p>
      </div>
    </div>
  </div>

  <div>
    <h3>Bio</h3>
    <p><%= @user.bio %></p>
  </div>

  <div>
    <ul>
      <% @user.recent_posts.each_with_index do |post, index| %>
        <li>
          <a href="<%=@user.id%>/posts/<%=post.id%>">
            <h3>Post #<%= index + 1 %></h3>
            <p><%= post.text %></p>
            <div>
              <span>Comments:
                <%= post.comments_counter || 0 %>,</span>
              <span>Likes:
                <%= post.likes_counter || 0 %></span>
            </div>
          </a>
        </li>
      <% end %>
    </ul>
  </div>

  <a href="<%= @user.id %>/posts">See all posts</a>
</section>
