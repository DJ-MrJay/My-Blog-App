<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, placeholder: "Your Name" %>
  </div>
  <br>
  <div class="field">
    <%= f.text_field :photo, placeholder: "Photo Link" %>
  </div>
  <br>
  <div class="field">
    <%= f.text_field :bio, placeholder: "Your Bio" %>
  </div>
  <br>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email Address" %>
  </div>
  <br>
  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (6 characters minimum)" %>
  </div>
  <br>
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
