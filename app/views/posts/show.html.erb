<section class="p-sm mb-section">
  <div class="post-detail border d-flex">
    <div class="post-detail-bdy">
      <h3>Post #<%= @post.id %>
        by
        <%= @post.author.name %></h3>
      <div class="d-flex mb-sm-2">
        <span class="comments mr-sm sp-fs">Comments:
          <%= @post.comments_counter || 0 %>,
        </span>
        <span class="likes sp-fs">Likes:
          <%= @post.likes_counter || 0 %>
        </span>
      </div>
    </div>
    <p class="post-text color">
      <%= @post.text %>
    </p>
  </div>
  <ul class="comment border">
    <li class="list-group-item">Comments:</li>
    <% @comments.each do |comment| %>
      <li class="list-group-item"><%= comment.author.name %>: <%= comment.text %></li>
    <% end %>
  </ul>
</section>
