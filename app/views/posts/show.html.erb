<section>
  <div class="post-container">
    <div>
      <h3>Post #<%= @post.id %>
        by
        <%= @post.author.name %></h3>
      <div class="comments-likes-alt">
        <span>Comments:
          <%= @post.comments_counter || 0 %>,</span>
        <span>Likes:
          <%= @post.likes_counter || 0 %></span>
      </div>
    </div>

    <h2><%= @post.title %></h2>
    <p><%= @post.text %></p>
    <div>
      <%= form_with model: @like, url: user_post_likes_path(@user, @post) do |form| %>
        <%= form.submit "Like post" %>
      <% end %>
    </div>
  </div>

  <div class="comments-container">
    <h4>Comments:</h4>
    <% @comments.includes(:author).each do |comment| %>
      <p class="user-bio-div"><%= comment.author.name %>:
        <%= comment.text %></p>
    <% end %>

    <button>
      <%= link_to "Create new comment", new_user_post_comment_path(@user, @post) %>
    </button>
  </div>
</section>
