<section>
  <div class="user-container">
    <div>
      <img class="avatar" src="<%= @user.photo %>" alt="User Avatar"/>
    </div>

    <div class="user-name-posts">
      <a href="/users/<%= @user.id %>/posts">
        <h2><%= @user.name %></h2>
        <p class="posts-number">Number of posts:
          <%= @user.posts_counter || 0 %></p>
      </a>
    </div>
  </div>

  <div>
    <% @posts.each_with_index do |post, index| %>
      <%= link_to  user_post_path(@user, post.id) do %>
        <div class="post-container">
          <h3>Post #<%= index + 1 %></h3>
          <h3><%= post.title %></h3>
          <p><%= post.text %></p>
          <div class="comments-likes">
            <span>Comments:
              <%= post.comments_counter || 0 %>,
            </span>
            <span>Likes:
              <%= post.likes_counter || 0 %></span>
          </div>
        </div>
      <% end %>

      <div class="comments-container">
        <h4>Comments:</h4>
        <% post.recent_comments.each do |comment| %>
          <p class="user-bio_div d-flex-2"><%= comment.author.name %>:
            <%= comment.text %>
          </p>
        <% end %>
      </div>
    <% end %>
  </div>
  <hr>
</section>
